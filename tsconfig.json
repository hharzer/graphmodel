{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2015", "ESNext.BigInt"],
        "strict": true,
        "stripInternal": true,
        "declaration": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "incremental": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "types": ["jest"]
    },
    "include": ["./src"]
}